    printf ("2 - Lançar Limite de Verba\n");
    printf ("3 - Consulta de Limite Disponivel\n");
    printf ("0 - Sair\n");
    printf("Codigo: ");
    scanf ("%i", &codigo);

    system("cls");
    cabecalho();

    return (codigo);
}

