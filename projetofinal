    printf ("2 - Lançar Verbas Recebidas\n");
    printf ("3 - Consultar Limite Disponivel\n");
    printf ("4 - Consultar Lançamentos\n");
    printf ("5 - Alterar Lançamentos\n");
    printf ("6 - Tutorial\n");
    printf ("0 - Sair\n");
    printf("Codigo: ");

    codigo = valida_inteiros();

    system("cls");
    cabecalho();

return (codigo);
}

